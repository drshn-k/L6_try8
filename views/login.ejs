<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />

    <!-- Tailwind css -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/style.css">

    <title>To-Do Manager</title>
</head>

<body>

    <div class="grid grid-cols-6 gap-4">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <% if(errors && errors.length > 0) { %> 
                <div class="bg-red-900 text-grey px-3 py-2 rounded list-inside">
                        <% for(let err of errors){ %> 
                            <li> <%= err  %> </li>
                            <% } %> 
                </div>
                <% } %> 
                <h6 class="py-4">Login to your account</h6>
                <form action="/session" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="py-3">
                        <label for="email" class="border border-gray-300 text-gray-900 rounded p-2 w-full">Email:</label>
                        <input type="email" name="email">
                    </div>
                    <div class="py-3">
                        <label for="password" class="border border-gray-300 text-gray-900 rounded p-2 w-full">Password: </label>
                        <input type="password" name="password">
                    </div>
                    <div class="py-3">
                        <button type="submit" class="text-white bg-green-600 hover::bg-green-800 font-medium rounded px-5 py-2">Sign in</button>
                    </div>


                </form>
        </div>
    </div>
</body>

</html>